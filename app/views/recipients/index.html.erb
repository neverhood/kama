<%= page_header %>

<%= link_to icon_label('glyphicon-plus', t('.new')), nil, id: 'new-recipient-form-toggler', class: 'btn btn-primary' %>

<hr>
<div id='new-recipient-form-container'>
  <%= render 'form' %>
</div>

<table class='table table-condensed' id='recipients'>
  <colgroup>
    <col span='1' class='col-md-5 col-lg-5'/>
    <col span='1' class='col-md-5 col-lg-5'/>
    <col span='1' class='col-md-2 col-lg-2'/>
  </colgroup>

  <thead>
    <th> <%= t '.name'          %> </th>
    <th> <%= t '.email'         %> </th>
    <th> <%= t 'common.options' %> </th>
  </thead>

  <tbody>
    <%= render @recipients %>
  </tbody>
</table>
